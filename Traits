        <CardContent className="space-y-3">
          <p className="text-amber-300 text-sm">{trait.description}</p>
          
          <div className="bg-stone-950/50 rounded p-3 border border-stone-700">
            <p className="text-stone-400 text-xs mb-2">{trait.bonusRange === 'Fixo' ? 'Bônus' : `Bônus em ${trait.substat}`}</p>
